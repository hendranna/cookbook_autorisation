<!DOCTYPE html>
<html>
<head>
  <title>R20130214Cookbook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <br>
   <% if current_user %>
  <p>hello, <%= current_user.email %></p>
  <br>
  <%= link_to 'Logout', session_path(session), method: :delete, data: {confirm: 'Are you sure?'} %>
  <% else %>
  <%= link_to ' Please login', login_path %>
  <%= link_to ' Please register', new_user_path %>

  <%end%>
  <br>

  <% flash.each do |name, message| %>
  <div class='flash-message flash-message- <%=name %>'>
    <%= message %>
  </div>
    <%end%>


  <nav>
    <ul>
      <li><%= link_to('Books', books_path) %></li>
      <li><%= link_to('Recipes', recipes_path) %></li>
      <li><%= link_to('Ingredients', ingredients_path) %></li>
      <li class='clear'>&nbsp;</li>
    </ul>
  </nav>




  <section><%= yield %></section>
</body>
</html>
